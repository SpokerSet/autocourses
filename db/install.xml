<?xml version="1.0" encoding="UTF-8"?>
<XMLDB PATH="local/coursebuilder/db">
  <TABLE NAME="local_coursebuilder_plan" COMMENT="Загруженные учебные планы">
    <FIELD NAME="id"        TYPE="int"     LENGTH="10" SEQUENCE="true" NOTNULL="true" />
    <FIELD NAME="filename"  TYPE="varchar" LENGTH="255" NOTNULL="true" />
    <FIELD NAME="timecreated" TYPE="int"   LENGTH="10" NOTNULL="true" />
  </TABLE>

  <TABLE NAME="local_coursebuilder_log" COMMENT="Лог выполнения задач">
    <FIELD NAME="id"        TYPE="int"     LENGTH="10" SEQUENCE="true" NOTNULL="true" />
    <FIELD NAME="planid"    TYPE="int"     LENGTH="10" NOTNULL="true" />
    <FIELD NAME="message"   TYPE="text"               NOTNULL="true" />
    <FIELD NAME="time"      TYPE="int"     LENGTH="10" NOTNULL="true" />
  </TABLE>
</XMLDB>